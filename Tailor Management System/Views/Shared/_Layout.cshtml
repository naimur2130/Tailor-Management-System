﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Tailor_Management_System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Psychiatrist_Management_System.styles.css" asp-append-version="true" />

    <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
            background: linear-gradient(90deg, #4b6cb7, #182848);
            color: white;
            padding: 2rem 1rem;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
            max-width: 1140px;
            margin: 0 auto;
        }

        .footer-privacy-link {
            color: #4db8ff;
            font-weight: 600;
            text-decoration: none;
            position: relative;
            cursor: pointer;
            transition: color 0.3s ease;
        }

            .footer-privacy-link::after {
                content: "";
                position: absolute;
                width: 0;
                height: 2px;
                bottom: -3px;
                left: 0;
                background-color: #4db8ff;
                transition: width 0.3s ease;
            }

            .footer-privacy-link:hover {
                color: #1a90ff;
            }

                .footer-privacy-link:hover::after {
                    width: 100%;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);">
            <div class="container-fluid">
                <a class="navbar-brand text-white fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-scissors"></i>
                    Tailor
                </a>
                <button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColorful" aria-controls="navbarColorful" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColorful">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/About" class="nav-link text-white">About</a>
                        </li>
                    </ul>

                    <form class="d-flex me-2" role="search" method="get" action="/Search/Results" novalidate>
                        <input class="form-control me-2" type="search" name="query" placeholder="Search" aria-label="Search" />
                        <button class="btn btn-light" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    <div class="d-flex">
                        <partial name="_LoginPartial.cshtml" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container pb-3">
        @RenderBody()
    </main>

    <footer>
        <div class="footer-container">
            <small>&copy; @DateTime.Now.Year <strong>Tailor Management System</strong> by <span style="color:#4db8ff;">XYZ</span></small>
            <a asp-controller="Home" asp-action="Privacy" class="footer-privacy-link">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>