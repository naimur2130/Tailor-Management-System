@model Tailor_Management_System.Models.Payment
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Payment Details";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6" id="printArea">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-info text-white text-center fw-bold">
                <i class="bi bi-info-circle me-2"></i> Payment Details
            </div>
            <div class="card-body">
                <p><strong>Payment ID:</strong> @Model.PaymentId</p>
                <p><strong>User:</strong> @Model.User?.UserName</p>
                <p><strong>Order ID:</strong> @Model.OrderId</p>
                <p><strong>Amount:</strong> @Model.Amount.ToString("C")</p>
                <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                <p><strong>Order Details:</strong> @Model.Order?.DressType, @Model.Order?.Measurements</p>

                <div class="mt-3 text-center">
                    <a asp-action="Transactions" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                    <button class="btn btn-primary ms-2" onclick="printPayment()">
                        <i class="bi bi-printer"></i> Print
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function printPayment() {
        var printContents = document.getElementById('printArea').innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
    }
</script>
