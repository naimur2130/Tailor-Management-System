@model IEnumerable<Tailor_Management_System.Models.Order>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Accepted Orders";
}

<h2>Orders Accepted by Tailors</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>User ID</th>
            <th>Dress Type</th>
            <th>Measurements</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Status</th>
            <th>Time Duration</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.UserId</td>
                <td>@order.DressType</td>
                <td>@order.Measurements</td>
                <td>@order.Address</td>
                <td>@order.PhoneNumber</td>
                <td><span class="badge bg-success">@order.Status</span></td>
                <td>@order.TimeDuration</td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
