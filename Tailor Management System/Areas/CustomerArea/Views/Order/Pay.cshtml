@model Tailor_Management_System.ViewModel.PaymentViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Make Payment</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Pay" method="post">
                        <input type="hidden" asp-for="OrderId" />

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label"></label>
                            <input asp-for="Amount" class="form-control" placeholder="Enter payment amount" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Pay</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
