@model PlaceOrderViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0 text-center">Place an Order</h4>
                </div>
                <div class="card-body">
                    <form asp-action="PlaceOrder" method="post">
                        <div class="mb-3">
                            <label asp-for="DressType" class="form-label">Dress Type</label>
                            <select asp-for="DressType" class="form-select">
                                <option value="">-- Select Dress Type --</option>
                                <option value="Kamiz">Kamiz</option>
                                <option value="Shirt">Shirt</option>
                                <option value="Pant">Pant</option>
                                <option value="Blouse">Blouse</option>
                            </select>
                            <span asp-validation-for="DressType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Measurements" class="form-label">Measurements</label>
                            <textarea asp-for="Measurements" class="form-control"></textarea>
                            <span asp-validation-for="Measurements" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Enter your address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+880123456789" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TimeDuration" class="form-label">Expected Time Duration</label>
                            <select asp-for="TimeDuration" class="form-select">
                                <option value="">-- Select Duration --</option>
                                <option value="3 days">3 days</option>
                                <option value="5 days">5 days</option>
                                <option value="1 week">1 week</option>
                                <option value="2 weeks">2 weeks</option>
                            </select>
                            <span asp-validation-for="TimeDuration" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Place Order</button>
                        </div>
                    </form>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center mt-3" role="alert">
                    @TempData["Success"]
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons  lists   table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    
}
